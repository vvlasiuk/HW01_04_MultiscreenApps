<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test_Delete">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nameTextView"
            style="@style/locationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/descriptionTextView"
            style="@style/locationDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/addressTextView"
            style="@style/locationAddressSchedulePricePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="map"
            android:drawableLeft="@drawable/ic_add_location_black_24dp"
            android:text="" />

        <TextView
            android:id="@+id/workHoursTextView"
            style="@style/locationAddressSchedulePricePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_schedule_black_24dp"
            android:text="" />

        <TextView
            android:id="@+id/phoneTextView"
            style="@style/locationAddressSchedulePricePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:text="" />

        <TextView
            android:id="@+id/siteTextView"
            style="@style/locationAddressSchedulePricePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:drawableLeft="@drawable/ic_site_black_24px"
            android:text="" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
